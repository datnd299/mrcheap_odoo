<odoo>
  <record id="view_partner_tree_inherit_mrcheap" model="ir.ui.view">
    <field name="name">res.partner.tree.inherit.mrcheap</field>
    <field name="model">res.partner</field>
    <!-- Nếu đang chỉnh Contacts: -->
    <field name="inherit_id" ref="base.view_partner_tree"/>
    <!-- Nếu đang chỉnh Customers trong Accounting, thay bằng view thật sự của màn đó -->
    <field name="arch" type="xml">
      <xpath expr="//field[@name='mobile']" position="after">
        <field name="debit_balance" optional="show"/>
      </xpath>
    </field>
  </record>
</odoo>
