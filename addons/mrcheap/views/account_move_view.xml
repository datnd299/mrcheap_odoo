<odoo>
  <record id="view_move_form_inherit_copy_link_btn" model="ir.ui.view">
    <field name="name">account.move.form.copy.payment.link</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Chèn ngay sau nút Preview -->
      <xpath expr="//header/button[@name='preview_invoice']" position="after">
        <button name="action_get_payment_link"
                type="object"
                class="btn btn-secondary"
                string="Copy payment link"
                invisible="move_type not in ('out_invoice', 'out_refund') or state in ('draft', 'cancel')"/>
      </xpath>
    </field>
  </record>
</odoo>
